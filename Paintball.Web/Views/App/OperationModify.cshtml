@{
    Layout = null;
}
<div class="row">
    <div class="col-xs-12">
        <header class="page-header">
            <h1 class="page-title" ng-hide="$ctrl.isCreating">Редактирование операции</h1>
            <h1 class="page-title" ng-show="$ctrl.isCreating">Добавление операции</h1>
        </header>
        <div class="row">
            <form name="form">
                <fieldset class="form-group">
                    <label for="description">
                        Описание <span class="text-danger">*</span> &nbsp;
                        <span class="text-danger" ng-show="form.description.$error.required && (form.description.$touched || form.$submitted)">
                            - нужно указать описание
                        </span>
                        <span class="text-danger" ng-show="form.description.$error.maxlength && (form.description.$touched || form.$submitted)">
                            - максимальная длина описания - 250 символов
                        </span>
                    </label>
                    <input class="form-control" name="description" type="text" maxlength="250" placeholder="Введите описание..." ng-model="$ctrl.operation.description" required />
                </fieldset>
                <fieldset class="form-group">
                    <label for="price">
                        Цена <span class="text-danger">*</span> &nbsp;
                        <span class="text-danger" ng-show="form.price.$error.required && (form.price.$touched || form.$submitted)">
                            - нужно указать цену
                        </span>
                        <span class="text-danger" ng-show="form.price.$error.min && (form.price.$touched || form.$submitted)">
                            - минимальная цена - 0
                        </span>
                    </label>
                    <input class="form-control" name="price" type="number" min="0" placeholder="Введите цену..." ng-model="$ctrl.operation.price" required />
                </fieldset>
                <div class="text-right">
                    <a class="btn btn-default" href="/app/#!/company/operations">Отмена</a>
                    <button ng-show="$ctrl.isCreating" class="btn btn-action" type="submit" ng-click="form.$valid ? $ctrl.proceed() : ''">Создать</button>
                    <button ng-hide="$ctrl.isCreating" class="btn btn-action" type="submit" ng-click="form.$valid ? $ctrl.proceed() : ''">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>