@{
    Layout = null;
}
<div class="row">
    <div class="col-xs-12">
        <header class="page-header">
            <div class="row">
                <a class="btn btn-action btn-lg pull-right" href="/app/#!/news/create">Создать новость</a>
                    <h1 class="page-title">Новости компании</h1>
            </div>
        </header>
        <div ng-hide="$ctrl.count === 0" id="news" class="row">
            <article class="panel panel-default" ng-repeat="n in $ctrl.news">
                <header class="panel-heading">
                    <a class="pull-left" href="/app/#!/news/{{n.id}}">{{n.title}}</a>
                    <a class="pull-right text-danger" href="/app/#!/news/delete/{{n.id}}">&nbsp;&nbsp;<i class="fa fa-close"></i></a>
                    <span class="pull-right">Опубликовано <strong>{{n.publishDate | date: 'yyyy-MM-dd'}}</strong></span>
                    <div class="clearfix"></div>
                </header>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-2">
                            <img ng-hide="n.titleImage" class="img-thumbnail img-responsive" src="~/Images/default.jpg" />
                            <img ng-show="n.titleImage" class="img-thumbnail img-responsive" src="{{n.titleImage}}" />
                        </div>
                        <div class="col-sm-10">
                            {{n.text | length: 250}}
                        </div>
                    </div>
                </div>
            </article>
        </div>
        <div ng-show="$ctrl.count === 0" class="row">
            <h3>Новостей нет</h3>
        </div>
        <div ng-hide="$ctrl.count === 0" class="center-block">
            <ul class="pagination pagination-lg">
                <li class="ng-class: page == $ctrl.pageNumber ? 'active' : ''" ng-repeat="page in $ctrl.getPages()"><a ng-click="$ctrl.getPage(page)">{{page}}</a></li>
            </ul>
        </div>
    </div>
</div>