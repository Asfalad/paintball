@{
    Layout = null;
}
<div class="row">
    <div class="col-xs-12 maincontent">
        <header class="page-header">
            <a class="btn btn-lg btn-success pull-right" href="/app/#!/company/update">Редактировать компанию</a>
            <h1 class="page-title">{{company.name}}</h1>
        </header>
        <article class="company-description">
            <img class="img-thumbnail img-responsive company-logo" ng-hide="company.logoImage" src="~/Images/default.jpg" />
            <img class="img-thumbnail img-responsive company-logo" ng-show="company.logoImage" src="{{company.logoImage}}" />
            {{company.description}}
        </article>
        <div class="item-gametypes">
            <header>
                <h3>Типы игр</h3>
            </header>
            <div class="body row">
                <div class="col-sm-12">
                    <ul class="list-group">
                        <li class="list-group-item list-group-item-success" ng-repeat="gameType in gameTypes">{{gameType.name}} <span class="badge">₴ {{gameType.price}}</span></li>
                    </ul>
                </div>
                <div class="item-playground col-sm-12">
                    <header>
                        <h3>Игровые площадки</h3>
                    </header>
                    <div id="playgrounds row">
                        <div class="panel panel-success" ng-repeat="playground in playgrounds">
                            <header class="panel-heading">
                                <span class="pull-left"><span class="badge">₴ {{playground.price}}</span> &nbsp;-&nbsp; {{playground.name}}</span>
                                <a class="btn btn-success pull-right" href="/app/#!/company/playgrounds/update/{{playground.id}}">Редактировать</a>
                                <a class="btn btn-danger pull-right" href="/app/#!/company/playgrounds/delete/{{playground.id}}">Удалить</a>
                                <div class="clearfix"></div>
                            </header>
                            <div class="body panel-body row">
                                <img class="img-responsive col-sm-3" ng-show="playground.firstImage" src="{{playground.firstImage}}" />
                                <img class="img-responsive col-sm-3" ng-show="playground.secondImage" src="{{playground.secondImage}}" />
                                <img class="img-responsive col-sm-3" ng-show="playground.thirdImage" src="{{playground.thirdImage}}" />
                                <img class="img-responsive col-sm-3" ng-show="playground.fourthImage" src="{{playground.fourthImage}}" />
                            </div>
                        </div>
                    </div>
                    <div ng-show="$ctrl.count === 0" class="row">
                        <h3>Нет игровых площадок</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
