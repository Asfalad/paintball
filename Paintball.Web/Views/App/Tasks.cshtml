@{
    Layout = null;
}
<div class="row">
    <div class="col-xs-12">
        <header class="page-header">
            <h1 class="page-title">Задания</h1>
        </header>
        <div ng-hide="$ctrl.count === 0" class="row" id="tasks">
            <table class="table">
                <thead>
                    <tr><td></td><td>Текст</td></tr>
                </thead>
                <tbody>
                    <tr ng-repeat="operation in $ctrl.operations">
                        <td><input type="checkbox" ng-model="operation.isCompleted" /></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div ng-show="$ctrl.count === 0" class="row">
            <h3>Нет заданий</h3>
        </div>
        <div ng-hide="$ctrl.count === 0" class="center-block">
            <ul class="pagination pagination-lg">
                <li class="ng-class: page == $ctrl.pageNumber ? 'active' : ''" ng-repeat="page in $ctrl.getPages()"><a ng-click="$ctrl.getPage(page)">{{page}}</a></li>
            </ul>
        </div>
    </div>
</div>