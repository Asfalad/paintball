@{
    Layout = null;
}
<div class="row">
    <div class="col-xs-12">
        <header class="page-header">
            <h1 class="page-title" ng-hide="$ctrl.isCreating">Редактирование площадки</h1>
            <h1 class="page-title" ng-show="$ctrl.isCreating">Добавление площадки</h1>
        </header>
        <div class="row">
            <form name="form">
                <fieldset class="form-group">
                    <label for="name">
                        Имя <span class="text-danger">*</span> &nbsp;
                        <span class="text-danger" ng-show="form.name.$error.required && (form.name.$touched || form.$submitted)">
                            - нужно указать имя
                        </span>
                        <span class="text-danger" ng-show="form.name.$error.maxlength && (form.name.$touched || form.$submitted)">
                            - максимальная длина имени - 250 символов
                        </span>
                    </label>
                    <input class="form-control" name="name" type="text" maxlength="250" placeholder="Введите имя..." ng-model="$ctrl.playground.name" required />
                </fieldset>
                <fieldset class="form-group">
                    <label for="price">
                        Цена <span class="text-danger">*</span> &nbsp;
                        <span class="text-danger" ng-show="form.price.$error.required && (form.price.$touched || form.$submitted)">
                            - нужно указать цену
                        </span>
                        <span class="text-danger" ng-show="form.price.$error.min && (form.price.$touched || form.$submitted)">
                            - минимальная цена - 0
                        </span>
                    </label>
                    <input class="form-control" name="price" type="number" min="0" placeholder="Введите цену..." ng-model="$ctrl.playground.price" required />
                </fieldset>
                <fieldset class="form-group">
                    <label for="logoImage">
                        Изображения площадки
                    </label>
                    <div class="row">
                        <div class="col-sm-3" ngf-select ng-model="$ctrl.playground.firstImage" name="file"
                             ngf-pattern="'image/*'" ngf-accept="'image/*'"
                             ngf-max-size="1MB"><img class="img-responsive img-thumbnail" ngf-thumbnail="$ctrl.playground.firstImage || '/images/default.jpg'" /></div>
                        <div class="col-sm-3" ngf-select ng-model="$ctrl.playground.secondImage" name="file"
                             ngf-pattern="'image/*'" ngf-accept="'image/*'"
                             ngf-max-size="1MB"><img class="img-responsive img-thumbnail" ngf-thumbnail="$ctrl.playground.secondImage || '/images/default.jpg'" /></div>
                        <div class="col-sm-3" ngf-select ng-model="$ctrl.playground.thirdImage" name="file"
                             ngf-pattern="'image/*'" ngf-accept="'image/*'"
                             ngf-max-size="1MB"><img class="img-responsive img-thumbnail" ngf-thumbnail="$ctrl.playground.thirdImage || '/images/default.jpg'" /></div>
                        <div class="col-sm-3" ngf-select ng-model="$ctrl.playground.fourthImage" name="file"
                             ngf-pattern="'image/*'" ngf-accept="'image/*'"
                             ngf-max-size="1MB"><img class="img-responsive img-thumbnail" ngf-thumbnail="$ctrl.playground.fourthImage || '/images/default.jpg'" /></div>
                    </div>
                </fieldset>
                <div class="text-right">
                    <a class="btn btn-default" href="/app/#!/company/playgrounds">Отмена</a>
                    <button ng-show="$ctrl.isCreating" class="btn btn-action" type="submit" ng-click="form.$valid ? $ctrl.proceed() : ''">Создать</button>
                    <button ng-hide="$ctrl.isCreating" class="btn btn-action" type="submit" ng-click="form.$valid ? $ctrl.proceed() : ''">Сохранить</button>
                </div>
            </form>
        </div>
    </div>
</div>