@{
    Layout = null;
}
<div class="row">
    <div class="col-xs-12">
        <header class="page-header">
            <div class="row">
                <a class="btn btn-action btn-lg pull-right" href="/app/#!/company/certificates/create">Создать сертификат</a>
                <h1 class="page-title">Сертификаты компании</h1>
            </div>
        </header>
        <div ng-hide="$ctrl.count === 0" class="row" id="certificates">
            <article class="certificate container-fluid col-sm-3 col-sm-offset-1" ng-repeat="certificate in $ctrl.certificates">
                <header class="row">
                    <div class="col-xs-3 text-left">
                        <span class="badge" title="Цена">₴ {{certificate.price}}</span>
                    </div>
                    <div class="col-xs-6 text-center">
                        <h3>
                            Сертификат
                        </h3>
                    </div>
                    <div class="col-xs-3 text-right">
                        <a href="/app/#!/company/certificates/update/{{certificate.id}}" title="Редактировать сертификат"><span class="fa fa-edit"></span></a>
                        &nbsp;
                        <a href="/app/#!/company/certificates/delete/{{certificate.id}}" title="Удалить сертификат"><span class="fa fa-close text-danger"></span></a>
                    </div>
                </header>
                <div class="body">
                    <dl>
                        <dt>Имя</dt>
                        <dd>{{certificate.firstName}}</dd>
                        <dt>Фамилия</dt>
                        <dd>{{certificate.lastName}}</dd>
                        <dt>Отчество</dt>
                        <dd>{{certificate.middleName}}</dd>
                        <dt>Сертификат получен</dt>
                        <dd>{{certificate.startDate | date:'yyyy-MM-dd'}}</dd>
                        <dt>Дата окончания действия сертификата</dt>
                        <dd>{{certificate.endDate | date:'yyyy-MM-dd'}}</dd>
                    </dl>
                </div>
            </article>
        </div>
        <div ng-show="$ctrl.count === 0" class="row">
            <h3>Сертификатов нет</h3>
        </div>
        <div ng-hide="$ctrl.count === 0" class="center-block">
            <ul class="pagination pagination-lg">
                <li class="ng-class: page == $ctrl.pageNumber ? 'active' : ''" ng-repeat="page in $ctrl.getPages()"><a ng-click="$ctrl.getPage(page)">{{page}}</a></li>
            </ul>
        </div>
    </div>
</div>