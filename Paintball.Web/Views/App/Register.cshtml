@{
    Layout = null;
}
<div class="row">
    <!-- Main content -->
    <div class="col-xs-12">
        <header class="page-header">
            <h1 class="page-title">Регистрация</h1>
        </header>
        <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h3 class="thin text-center">Создать новый аккаунт</h3>
                    <hr>
                    <form name="form">
                        <div class="top-margin alert alert-danger" ng-show="$ctrl.message && !$ctrl.savedSuccessfully">
                            {{$ctrl.message}}
                        </div>
                        <div class="top-margin alert alert-success" ng-show="$ctrl.savedSuccessfully">
                            {{$ctrl.message}}
                        </div>
                        <div class="top-margin">
                            <label for="firstName">
                                Имя <span class="text-danger">*</span>
                                <span class="text-danger" ng-show="form.firstName.$error.required && (form.firstName.$touched || form.$submitted)">
                                    - нужно ввести имя
                                </span>
                            </label>
                            <input name="firstName" type="text" class="form-control" ng-model="$ctrl.registration.firstName" placeholder="Введите ваше имя..." required autofocus>
                        </div>
                        <div class="top-margin">
                            <label for="lastName">
                                Фамилия
                            </label>
                            <input name="lastName" type="text" class="form-control" ng-model="$ctrl.registration.lastName" placeholder="Введите вашу фамилию...">
                        </div>
                        <div class="top-margin">
                            <label for="email">
                                E-mail <span class="text-danger">*</span>
                                <span class="text-danger" ng-show="form.email.$error.required && (form.email.$touched || form.$submitted)">
                                    - нужно ввести E-mail
                                </span>
                                <span class="text-danger" ng-show="form.email.$error.email && (form.email.$touched || form.$submitted)">
                                    - нужно ввести правильный E-mail
                                </span>
                            </label>
                            <input name="email" type="email" class="form-control" ng-model="$ctrl.registration.email" placeholder="Введите адресс вашей электронной почты..." required>
                        </div>
                        <div class="row top-margin">
                            <div class="col-sm-6">
                                <label for="password">
                                    Пароль <span class="text-danger">*</span>
                                </label>
                                <input name="password" type="password" minlength="6" class="form-control" ng-model="$ctrl.registration.password" placeholder="Введите пароль..." required>
                                <span class="text-danger" ng-show="form.password.$error.required && (form.password.$touched || form.$submitted)">
                                    - нужно ввести пароль
                                </span>
                                <span class="text-danger" ng-show="form.password.$error.minlength && (form.password.$touched || form.$submitted)">
                                    - пароль должен содержать минимум 6 символов
                                </span>
                            </div>
                            <div class="col-sm-6">
                                <label for="passwordRepeat">
                                    Подтвердите пароль <span class="text-danger">*</span>
                                </label>
                                <input name="passwordRepeat" type="password" minlength="6" class="form-control" ng-model="$ctrl.registration.confirmPassword" placeholder="Повторите пароль..." required>
                                <span class="text-danger" ng-show="form.passwordRepeat.$error.required && (form.passwordRepeat.$touched || form.$submitted)">
                                    - нужно ввести подтверждение пароля
                                </span>
                                <span class="text-danger" ng-show="form.passwordRepeat.$error.minlength && (form.passwordRepeat.$touched || form.$submitted)">
                                    - подтверждение пароля должно содержать минимум 6 символов
                                </span>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-6 text-center">
                                <a class="btn btn-default" ng-href="/app/#!/login">Вход</a>
                            </div>
                            <div class="col-sm-6 text-center">
                                <button class="btn btn-action" ng-click="form.$valid ? $ctrl.signUp() : ''">Регистрация</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- /Main content -->
</div>