@{
    Layout = null;
}
<div class="row">
    <div class="col-sm-12 maincontent">
        <header class="page-header">
            <div class="row">
                <div class="col-sm-8">
                    <h1 class="page-title">События компании</h1>
                </div>
                <div class="col-sm-4">
                    <a class="btn btn-action btn-lg" href="/app/#!/events/create">Создать событие</a>
                </div>
            </div>
        </header>
        <div ng-hide="$ctrl.count === 0" class="row" id="events">
            <article class="panel panel-default" ng-repeat="event in $ctrl.events">
                <header class="panel-heading">
                    <a class="pull-left" href="/app/#!/events/{{event.id}}">{{event.title}}</a>
                    <a class="text-danger" href="/app/#!/event/delete/{{event.id}}"><span class="pull-right"><i class="fa fa-close"></i></span></a>
                    <div class="clearfix"></div>
                </header>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-2">
                            <a ng-hide="event.titleImage" href="/app/#!/events/{{event.id}}"><img class="img-thumbnail img-responsive" src="~/images/default.jpg" /></a>
                            <a ng-show="event.titleImage" href="/app/#!/events/{{event.id}}"><img class="img-thumbnail img-responsive" src="{{event.titleImage}}" /></a>
                        </div>
                        <div class="col-sm-10">
                            {{event.description | length: 250}}
                        </div>
                    </div>
                </div>
            </article>
        </div>
        <div ng-show="$ctrl.count === 0" class="row">
            <h3>Событий нет</h3>
        </div>
        <div ng-hide="$ctrl.count === 0" class="center-block">
            <ul class="pagination pagination-lg">
                <li class="ng-class: page == $ctrl.pageNumber ? 'active' : ''" ng-repeat="page in $ctrl.getPages()"><a ng-click="$ctrl.getPage(page)">{{page}}</a></li>
            </ul>
        </div>
    </div>

</div>